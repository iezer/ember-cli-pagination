<table class="table">
  <tr>
    <th>Name</th>
    <th>Completed</th>
  </tr>

  {{#each pagedContent as |content|}}
    <tr class="todo">
      <td>{{content.name}}</td>
      <td>
        {{input type="checkbox" checked=content.completed}}
      </td>
    </tr>
  {{/each}}
</table>

{{page-numbers content=pagedContent}}

<button {{action "save"}}>Save</button>

<div class="numRemoteCalls">
  {{pagedContent.numRemoteCalls}}
</div>

<button {{action (mut onlyGutters) true}}>Only Gutters</button>

{{outlet}}
